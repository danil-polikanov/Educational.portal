<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
      autoReload = "true">

      
  <targets>
 
    <target name="log_File" xsi:type="File"
            fileName="C:\Users\Desktop\source\repos\MainProject\MainProject\Logs\nlog-all-${shortdate}.log"
            layout = "${longdate}   ${uppercase:${level}}   ${message}"/>

    <target name="log_Console" xsi:type="ColoredConsole" layout = "${longdate}    ${uppercase:${level}}    ${message}">
    </target>
  </targets>

  <rules>
    
    <logger name="*" minlevel="Warning" writeTo="log_File" />
    <logger name="*" minlevel="Debug" writeTo="log_Console" />
    
  </rules>
</nlog>