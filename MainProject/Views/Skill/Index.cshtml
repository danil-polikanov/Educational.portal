@model IEnumerable<MainProject.Core.SkillEntity>

@{
    ViewData["Title"] = "Список всех способностей";
}

<h1>Список способностей</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CreatedByUser.Login)
			</th>
			<th></th>
		</tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.CreatedByUser.Login)
			</td>
			<td>
				<a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
			</td>
		</tr>
}
    </tbody>
</table>
