@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Редактирование курса</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" value="@ViewBag.id" name="id" />
			<div class="form-group">
				<label class="control-label">Name</label>
				<input Name="Name" class="form-control" />
			</div>
			<div class="form-group">
				<label class="control-label">Description</label>
				<input Name="Description" class="form-control" />
			</div>
			<div class="form-group">
				<label class="control-label">Name</label>
				<select multiple class="form-control" Name="Materials">
					@foreach (var i in ViewBag.Materials)
					{
						<option value="@i.Id">@i.Name</option>
					}
				</select>
			</div>
			<div class="form-group">
				<label class="control-label">Name</label>
				<select multiple class="form-control" Name="Skills">
					@foreach (var i in ViewBag.Skills)
					{
						<option value="@i.Id">@i.Name</option>
					}
				</select>
			</div>
			<div class="form-group">
				<label class="control-label">RequirmentLevel</label>
				<label class="control-label">Введите уровень через запятую</label>
				<input Name="RequirmentLevel" class="form-control" />
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
