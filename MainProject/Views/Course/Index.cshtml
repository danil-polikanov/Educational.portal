@model IEnumerable<MainProject.Core.CourseEntity>

@{
    ViewData["Title"] = "Index";
}

<h1>Список курсов</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CreatedByUser)
			</th>

			<th></th>
		</tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedByUser.Login)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
				<a asp-action="PassingCourse" asp-route-id="@item.Id">Enroll in a course</a> 
            </td>
        </tr>
}
    </tbody>
</table>
